<resources>
    <!-- Base application theme -->
    <style name="Theme.FitVisionApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- No ActionBar Theme -->
    <style name="Theme.FitVisionApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBar Overlay -->
    <style name="Theme.FitVisionApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <!-- Popup Overlay -->
    <style name="Theme.FitVisionApp.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">#757575</item>
    </style>
</resources>